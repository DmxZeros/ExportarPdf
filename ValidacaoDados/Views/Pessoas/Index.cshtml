@model IEnumerable<ValidacaoDados.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Novo</a> |
    <a asp-action="VisualizarCSV" class="btn btn-outline-success">Exportar CSV</a> |
    <a asp-action="VisualizaePDF" class="btn btn-outline-danger">Exportar PDF</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmaEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmaEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PessoaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PessoaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PessoaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
